<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Societly</title>
        <link rel="stylesheet" href="~/Content/steak-styles.css">
        <link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.5.0/pure-min.css">
    </head>
    <body>
        <header class="title-header">
            <h1>Societly</h1>

            <nav class="pure-menu pure-menu-open pure-menu-horizontal">
                <ul>
                    <li>@Html.ActionLink("Game", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "Index", "Home")</li>
                    <li>@Html.ActionLink("Proposals", "Index", "Home")</li>
                    <li>@Html.ActionLink("Guide", "Index", "Home")</li>
                    
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Log Out", "LogOut", "Account")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Log In", "LogIn", "Account")</li>
                        <li>@Html.ActionLink("Sign Up", "Register", "Account")</li>
                    }
                </ul>
            </nav>
        </header>

        <div class="content">
            @RenderBody()
        </div>

        <footer>
        </footer>
    </body>
</html>
