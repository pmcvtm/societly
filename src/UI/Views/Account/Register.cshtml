@using UI.Helpers
@model Societly.Features.Account.RegisterUserCommand

@{
    ViewBag.Title = "Sign Up For Societly";
}

<h2>Sign Up</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "pure-form pure-form-aligned" }))
{
    <fieldset>
        <legend>It's fun and easy!</legend>

        @Html.FormGroupFor(x => x.Email, Html.EditorFor(x => x.Email))

        @Html.FormGroupFor(x => x.UserName, Html.EditorFor(x => x.UserName))

        @Html.FormGroupFor(x => x.Password, Html.PasswordFor(x => x.Password))

        @Html.ActionLink("Bail", "Index", "Home", new { }, new { @class="pure-button" })
        <input type="submit" class="pure-button pure-button-primary" value="Sign Up" />
    </fieldset>
}
